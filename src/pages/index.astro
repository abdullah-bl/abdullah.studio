---
import Layout from "../layouts/layout.astro";
import Header from "../layouts/header.astro";
import Glow from "../components/glow";
import { MessageSquareQuote } from "lucide-react";
---

<Layout title="Abdullah Bl" description="Abdullah Bl's portfolio">
  <main class="min-h-screen bg-white px-3">
    <Header />
    <div class="max-w-4xl mx-auto px-0 py-16 flex flex-col gap-16">
      <!-- Header -->
      <div class="aspect-[9/3] bg-gray-100 rounded-xl relative overflow-hidden">
        <Glow />
      </div>

      <!-- Projects Grid -->
      <div class="mb-16">
        <h2 class="text-xl font-light text-gray-900 mb-8">Recent Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Chat Project -->
          <a href="/chat" class="group">
            <div
              class="transition-colors duration-300 p-8 rounded-lg border border-gray-200 hover:border-gray-300"
            >
              <div class="mb-4">
                <div
                  class="w-12 h-12 bg-gray-900 rounded-lg flex items-center justify-center mb-4"
                >
                  <MessageSquareQuote className="w-6 h-6 text-white" />
                </div>
                <h3 class="text-xl font-medium text-gray-900 mb-2">Chat</h3>
                <p class="text-gray-600 text-sm leading-relaxed">
                  Interactive chat interface with modern UI components and
                  real-time messaging.
                </p>
              </div>
              <div
                class="flex items-center text-gray-500 group-hover:text-gray-900 transition-colors"
              >
                <span class="text-sm">View Project</span>
                <svg
                  class="w-4 h-4 ml-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>
        </div>
      </div>

      <!-- Footer -->
      <div class="text-center text-gray-500 text-sm">
        <p>
          Â© {new Date().getFullYear()} Abdullah Bl. Built with modern web technologies.
        </p>
      </div>
    </div>
  </main>
</Layout>
